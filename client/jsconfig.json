{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "public/**/*"],
  "exclude": ["**/node_modules/**", "**/build/**", "**/.env*"]
}
